{
  "name": "project-storyteller",
  "version": "2.0.0",
  "description": "CSS compiler for the Storyteller system",
  "scripts": {
    "build": "tsc && sass src/scss/project-storyteller.scss css/project-storyteller.css --style=expanded --no-source-map",
    "watch": "concurrently \"tsc --watch\" \"sass src/scss/project-storyteller.scss css/project-storyteller.css --style=expanded --source-map --watch\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "validate": "npm run lint && npm run type-check && npm run test"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "author": "Asacolips",
  "license": "MIT",
  "private": true,
  "types": "./types/foundry.d.ts",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/jquery": "^3.5.32",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "sass": "^1.53.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
